<div class="new-group-container">
<nav class="nav">
<%=link_to root_path do %> <i class="fa-solid fa-chevron-left" style="color: #f3f4f7;"></i>
<%end%>
<h3 class="tans-header">Log in</h3>

</nav>
<div class = "new-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => 'field'  %>

    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", :class => 'field' %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <%= f.submit "Log in",:class => 'submit' %>
<% end %>
</div>
<%= render "devise/shared/links" %>
</div>